include ../../blocks/header/header.pug 
include ../../blocks/search-block/search-block.pug 
include ../../blocks/footer/footer.pug 
include ../../components/slider-of-background/slider-of-background.pug 

- const { backgroundSliderOptions }  =  require("@/scripts/state.js")

doctype html
html(lang = "ru")
  head
    meta(charset = "UTF-8")
    meta(name = "viewport", content = "width = device-width, initial-scale = 1.0")
    meta(name = "description", content = "Лучшие номера для вашей работы, отдыха и просто вдохновения")
    meta(name = "keywords", content = "номер, отель, номер в отеле, поис номеров, гостиница")

    title Найдём номера под ваши пожелания 

  body
    +header(false, "")

    main.landing
      +backgroundSlider(backgroundSliderOptions)

      .landing__container 

        .landing__search-form
          +searchBlock 

        .landing__text-container 
          p.landing__text Лучшие номера для вашей работы, отдыха и просто вдохновения

    +footer




    
    
      