include components/filter-date-dropdown/filter-date-dropdown.pug

.main 
  .main__container
    .main__column.main__column_left
      .main__text-field-container 
        +textField({title: "text field", name: "textField", placeholder: "Email"}) 

      .main__guests-container
        +dropdown({ className: "guests-quantity", title: "dropdown", name: "guestsQuantity"})

      .main__masked-field-container
        +maskedTextField({title: "masked text field", name: "dateOfBirth"})

      .main__date-dropdown-container
        +dateDropdown({className: "date-selection", titles: ["date dropdown", "date dropdown"]})

      .main__date-filter-container.js-date-filter-container
        +filterDateDropdown({className: "date-filter", title: "filter date dropdown", name: "dateFilter"})

      h3.main__title.subscription-title subscription text field
      .main__subscription-field-container
        +subscriptionField

      .main__convenience-container 
        +dropdown({ className: "convenience", title: "dropdown", name: "convenience"})
      
      .main__expandable-checkbox-container 
        +expandableCheckboxList({title: "expandable checkbox list", itemOptions: [{checkboxName: "breakfast", checkboxChecked: false, itemText: "Завтрак"}, {checkboxName: "desk", checkboxChecked: true, itemText: "Письменный стол"}, {checkboxName: "feedingChair", checkboxChecked: true, itemText: "Стул для кормления"}, {checkboxName: "ded", checkboxChecked: true, itemText: "Кроватка"}, {checkboxName: "tv", checkboxChecked: false, itemText: "Телевизор"}, {checkboxName: "Shampoo", checkboxChecked: false, itemText: "Шампунь"}]})

      
    .main__column.main__column_center 
      .main__checkbox-buttons-container  
        +checkboxButtons({title: "checkbox buttons", items: [{name: "smoke", text: "Можно курить"}, {name: "pets", checked: true, text: "Можно с питомцами"}, {name: "guests", checked: true, text: "Можно пригласить гостей (до 10 человек)"}]})

      h3.main__title.radio-button-title Radio Buttons
      .main__radio-buttons-container 
        +radioButton("sex", [{value: "man", text: "Мужчина", checked: true}, {value: "woman", text: "Женщина", checked: false}])

      h3.main__title.toggle-title toggle
      .main__toggle-container
        +toggle({ text: "Получать спецпредложения", checked: true})
        +toggle({ text: "Получать спецпредложения"})

      h3.main__title.like-button-title like button
      .main__like-button-container 
        +likeButton({quantity: 2})
        +likeButton({quantity: 12, liked: true})

      h3.main__title.rate-button-title rate button
      .main__rate-button-container 
        +rateButton(4)
        +rateButton(5)
         
      .main__rich-checkbox-container 
        +richCheckboxButtons({title: "rich checkbox buttons", itemOptions: [{name: "corridorWidth", checked: false, title: "Широкий коридор", text: "Ширина коридоров в номере не мение 91 см."}, {name: "halperForinvalids", checked: false, title: "Помощник для инвалидов", text: "На 1 этаже вас встретит специалист и проводит до номера"}]})


    .main__column.main__column_right
      .main__slider-container 
        +slider({title: "range slider", selector: "price-filter"})

      h3.main__title.buttons-title buttons
      .main__buttons-container
        +button({})
        +button({modifier: "transparent"})
        +button({modifier: "minimal"})
        +button({text: "перейти к оплате", modifier: "big", isSubmit: true})

      h3.main__title.pagination-title pagination
      .main__pagination-container
        +pagination(15, "1 – 12 из 100+ вариантов аренды")
        
      .main__bullet-list-container 
        +bulletList("bullet list", ["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"])


    .main__row 
      .main__information-container 
        +informationBlock({itemOptions: [{img: "src/components/information-block/img/smile.png", alt: "comfort", title: "Комфорт", text: "Шумопоглощающие стены"},{img: "src/components/information-block/img/windows.png", alt: "windows", title: "Удобство", text: "Окно в каждой из спален"}]})

      .main__review-container 
        +review({photo:"src/components/reviews/img/user1.jpg", name: "Мурад Сарафанов", publicationDate: "5 дней назад", text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.", quantityLikes: 12, liked: true})
        