include ../date-picker/date-picker.pug

mixin dateDropdown({ titles = ['прибытие', 'выезд'], names = ['dateComing', 'dateLeave'], initDate, modifier = 'double-field' })   
  
  - const classes = `date-dropdown js-date-dropdown date-dropdown_${modifier}`
  
  div(class = classes)
    .date-dropdown__container
      h3.date-dropdown__title #{titles[0]}
      input.date-dropdown__field.js-date-dropdown__field(type = "text", name = names[0], placeholder = "ДД.ММ.ГГГГ", readonly)
    
    if (modifier === 'double-field')
      .date-dropdown__container
        h3.date-dropdown__title #{titles[1]}
        input.date-dropdown__field.js-date-dropdown__field(type = "text", name = names[1], placeholder = "ДД.ММ.ГГГГ", readonly)

    .date-dropdown__date-picker.js-date-dropdown__date-picker
      - const datePickerOptions = initDate ? initDate : {}
      +datePicker(datePickerOptions)


