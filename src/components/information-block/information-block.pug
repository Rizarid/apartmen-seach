mixin informationBlock(options)
  - const { title = "", itemOptions = [] } = options

  .information-block
    h2.information-block__title #{title}

    .information-block__list
      if itemOptions.length
        each item in itemOptions
          - const { img, alt, title, text } = item
          .information-block__item
            img.information-block__block-image(src != img, alt != alt)

            .information-block__text-container 
              p.information-block__item-title #{title}
              p.information-block__text #{text}
            
      