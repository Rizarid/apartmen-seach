mixin checkboxButtons({ title = 'checkbox buttons', modifier = 'standard', items })
  -
    const modifiers = { 
      standard: 'checkbox-buttons_modifier_standard',
      rich: 'checkbox-buttons_modifier_rich',
      expandable: 'checkbox-buttons_modifier_expandable'
    }

  if items

    div(class = ['checkbox-buttons', 'js-checkbox-buttons', modifiers[modifier]])
      - const isExpandable = (modifier === 'expandable')

      if isExpandable
        .checkbox-buttons__titles-container.js-checkbox-buttons__titles-container
          h3.checkbox-buttons__title #{ title } 
      else
        h3.checkbox-buttons__title #{ title }

      .checkbox-buttons__list
        each item in items
          -
            const { 
              title = "items title", text = 'items text', name = 'checkbox', 
              checked = false 
            } = item
          
          label.checkbox-buttons__item.js-checkbox-buttons__item
            span.checkbox-buttons__checkbox
              input.checkbox-buttons__checkbox-input( type = "checkbox", name = name, checked = checked)
              span.checkbox-buttons__checkbox-imitator

            if modifier === 'rich'
              span.checkbox-buttons__item-content 
                span.checkbox-buttons__item-title #{ title }
                span.checkbox-buttons__item-text #{ text }
            else 
              span.checkbox-buttons__item-text #{ text }